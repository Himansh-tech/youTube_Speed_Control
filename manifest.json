{
  "manifest_version": 3,
  "name": "YouTube Speed Controller",
  "version": "2.1",
  "description": "Control YouTube playback speed up to 16x with a slider, manual input, and mute option.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
